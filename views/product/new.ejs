<form class="form-horizontal" method="post">
	<fieldset>
		<legend>添加商品</legend>
	</fieldset>
	<div class="control-group">
		<lable class="control-lable" for="productname">商品名称</lable>
		<div class="controls">
			<input type="text" class="input-xlarge" id="productname" name="productname">
			<p class="help-block">商品名称</p>
		</div>
	</div>
	<div class="control-group">
		<lable class="control-lable" for="username">商品分类</lable>
		<div class="controls">
			<input type="text" class="input-xlarge" id="password" name="password">
		</div>
	</div>
	<div class="control-group">
		<lable class="control-lable" for="username">重复输入密码</lable>
		<div class="controls">
			<input type="text" class="input-xlarge" id="password-repeat" name="password-repeat">
		</div>
	</div>
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">保存</button>
	</div>
</form>
